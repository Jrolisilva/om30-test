<p id="notice"><%= notice %></p>

<div style="margin-bottom: 10px;">
  <h1>Municipes</h1>
  <%= link_to '+ Novo Municipe', new_municipe_path, class: 'btn btn-primary' %>
</div>

<div>
  <%= form_tag municipe_index_path, method: :get do %>
    <h4>Pesquisar</h4>
    <div style="margin-bottom: 10px">
      <label for="name">CPF:</label>
      <%= text_field_tag :cpf, params[:cpf] %>
      <%= submit_tag 'Pesquisar', class: 'btn btn-secondary' %>
    </div>
  <% end %>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>CPF</th>
        <th>CNS</th>
        <th>Email</th>
        <th>Birthdate</th>
        <th>Phone</th>
        <th>Status</th>
        <th></th>
      </tr>
    </thead>

    <tbody class="" >
      <% @municipe.each do |municipe| %>
        <tr>
          <td><%= municipe.name %></td>
          <td><%= municipe.cpf %></td>
          <td><%= municipe.cns %></td>
          <td><%= municipe.email %></td>
          <td><%= municipe.birthdate.strftime('%d/%m/%Y') %></td>
          <td><%= municipe.phone.gsub(/(\d{2})(\d{5})(\d{4})/, '(\1) \2-\3') %></td>
          <td><%= municipe.status %></td>
          <td><%= link_to "Editar", edit_municipe_path(municipe.id) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>